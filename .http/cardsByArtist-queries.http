###
# Variables
# @name variables
@baseUrl = {{$dotenv BASE_URL}}
@artistEndpoint = {{baseUrl}}/graphql


### Get Cards by Artist - Popular artist ID
# @ref variables
POST {{artistEndpoint}}
Content-Type: application/json

query CardsByArtist($artistId: ArtistIdArgEntityInput!) {
  cardsByArtist(artistId: $artistId) {
    __typename
    ... on CardsByArtistSuccessResponse {
      data {
        id
        name
        manaCost
        typeLine
        oracleText
        rarity
        setName
        setCode
        artist
        imageUris {
          normal
          large
        }
      }
    }
    ... on FailureResponse {
      status {
        message
        statusCode
      }
    }
  }
}

{
  "artistId": {
    "artistId": "rebecca-guay"
  }
}

