{
  "ScryfallConfig": {
    "Api": {
      "BaseUrl": "https://api.scryfall.com",
      "TimeoutSeconds": 30
    },
    "RateLimit": {
      "RequestsPerSecond": 10,
      "BurstSize": 15,
      "ThrottleWarningThreshold": 0.8
    },
    "Cache": {
      "CardTtlHours": 24,
      "SetTtlHours": 168,
      "MaxCacheSize": 500
    },
    "Retry": {
      "MaxRetries": 3,
      "InitialDelayMs": 1000,
      "MaxDelayMs": 32000,
      "BackoffMultiplier": 2.0
    }
  }
}